{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": [
      "ES5",
      "ES6",
      "ES2015"
    ],
    "declaration": true,
    "baseUrl": "src",
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.spec.ts"
  ]
}
